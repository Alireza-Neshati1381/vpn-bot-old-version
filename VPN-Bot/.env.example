# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_ADMIN_PIN=your_secure_admin_pin

# Database Configuration
DB_PATH=vpn_bot.sqlite3

# API Configuration
XUI_VERIFY_SSL=false
POLL_INTERVAL=1.0

# Security Settings
RATE_LIMIT_PER_MIN=20
MAX_RECEIPT_SIZE_MB=5

# Receipt Storage
# Options: local, s3
RECEIPT_STORAGE=local
RECEIPT_UPLOAD_DIR=uploads/receipts

# S3 Configuration (if RECEIPT_STORAGE=s3)
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-east-1

# Logging
LOG_LEVEL=INFO

# Default Language (fa or en)
DEFAULT_LANGUAGE=fa
